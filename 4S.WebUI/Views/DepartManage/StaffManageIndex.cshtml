                    <form class="layui-form" action="">
                        <div class="layui-form-item">
                            <table class="layui-show" id="tabledemo" lay-filter="tabledemo"></table>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
